<div class="container">
  <h1>All Posts</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Date Posted</th>
      </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= post.created_at_short %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'New Post', new_post_path, :class => 'btn btn-default' %>
</div>
