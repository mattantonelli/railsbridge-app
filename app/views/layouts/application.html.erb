<!DOCTYPE html>
<html>
<head>
<title>Board</title>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Message Board', root_path, :class => 'navbar-brand' %>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><%= link_to 'Home', root_path %></li>
    </ul>
    <div class="navbar-right">
      <% if user_signed_in? %>
        <p class="navbar-text"><%= current_user.email %></p>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'btn btn-default navbar-btn' %>
      <% else %>
        <%= link_to 'Sign up', new_user_registration_path, :class => 'btn btn-default navbar-btn' %>
        <%= link_to 'Login', new_user_session_path, :class => 'btn btn-default navbar-btn' %>
      <% end %>
    </div>
  </div>
</div>
</nav>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</body>
</html>
